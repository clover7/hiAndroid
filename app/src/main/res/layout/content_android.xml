<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior" tools:showIn="@layout/activity_sub"
    tools:context="com.clover.seishun.hiandroid.AndroidActivity">

    <ScrollView
        android:layout_height="fill_parent"
        android:layout_width="fill_parent"
        xmlns:android="http://schemas.android.com/apk/res/android">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            tools:context="com.clover.seishun.hiandroid.AndroidActivity">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Android Example"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:id="@+id/btnAndroidFinish"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Activity"
                android:paddingBottom="20px"/>

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="3"
                android:orientation="horizontal">

                <Button android:text="1" android:id="@+id/btnLayout" android:onClick="mOnClick"/>
                <Button android:text="2" android:id="@+id/btnActivity" android:onClick="mOnClick"/>
                <Button android:text="4" android:id="@+id/btnCP"        android:onClick="mOnClick"/>
                <Button android:text="5" android:id="@+id/btnBR"        android:onClick="mOnClick"/>>
                <Button android:text="6" android:id="@+id/btnService" android:onClick="mOnClick"/>
                <Button android:text="3" android:id="@+id/btnEmpty"/>
            </GridLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="50px"
                android:paddingBottom="20px"
                android:text="Adapter View"/>

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:rowCount="2">
                <Button android:text="1" android:id="@+id/btnListView" android:onClick="mOnClick"/>
                <Button android:text="2" android:id="@+id/btnAdapter" android:onClick="mOnClick"/>
                <Button android:text="3" android:id="@+id/v_Btn3"/>
                <Button android:text="4" android:id="@+id/v_Btn4"/>
            </GridLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="50px"
                android:paddingBottom="20px"
                android:text="셀병합 그리드 레이아웃 (행)"/>

            <GridLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:columnCount="3">
                <Button android:text="1" android:id="@+id/cSpan_Btn1"/>
                <Button android:text="2" android:layout_rowSpan="2"
                    android:layout_gravity="fill"
                    android:id="@+id/cSpan_Btn2"/>
                <Button android:text="3" android:id="@+id/cSpan_Btn3"/>
                <Button android:text="4" android:id="@+id/cSpan_Btn4"/>
                <Button android:text="6" android:id="@+id/cSpan_Btn6"/>
                <Button android:text="7" android:id="@+id/cSpan_Btn7"/>
                <Button android:text="8" android:id="@+id/cSpan_Btn8"/>
                <Button android:text="9" android:id="@+id/cSpan_Btn9"/>
            </GridLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="50px"
                android:paddingBottom="20px"
                android:text="셀병합 그리드 레이아웃(열)"/>

            <GridLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:columnCount="3">
                <Button android:text="1" android:id="@+id/rSpan_Btn1"/>
                <Button android:text="2" android:layout_rowSpan="2" android:id="@+id/rSpan_Btn2"/>
                <Button android:text="3" android:id="@+id/rSpan_Btn3"/>
                <Button android:text="4" android:id="@+id/rSpan_Btn4"/>
                <Button android:text="6" android:id="@+id/rSpan_Btn6"/>
                <Button android:text="7" android:id="@+id/rSpan_Btn7"/>
                <Button android:text="8" android:id="@+id/rSpan_Btn8"/>
                <Button android:text="9" android:id="@+id/rSpan_Btn9"/>
            </GridLayout>

        </LinearLayout>
    </ScrollView>
</RelativeLayout>
