<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_height="fill_parent"
        android:layout_width="fill_parent"
        xmlns:android="http://schemas.android.com/apk/res/android">
    
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"  android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="com.clover.seishun.hiandroid.BleScanActivity">
    
        <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtBLE"
        android:text="BLE DEVICE SCAN"
        android:layout_marginTop="20px"
        android:layout_marginBottom="20px"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtBLEContext"
            android:layout_marginTop="20px"
            android:layout_marginBottom="20px"/>
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2">
    
            <Button android:id="@+id/btnBLEStart" android:text="START SCAN"
                    android:background="@color/theme2_waterblue"
                    android:backgroundTint="@color/theme1_blue1"
                    android:shadowColor="@color/theme1_grayblack"
                    android:textColor="@color/theme2_lightblue"
                    android:onClick="mOnClick"
                    android:padding="20px"/>

            <Button android:id="@+id/btnBLEStop" android:text="STOP SCAN"
                android:layout_marginLeft="25px"
                android:background="@color/theme1_gray"
                android:textColor="@color/theme2_lightblue"
                android:onClick="mOnClick"
                android:padding="20px"/>/>
    
        </GridLayout>
    
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtTitle"
            android:text="BLE LIST"
            android:layout_marginTop="20px"/>
    
        <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/pairing_list"></ListView>
    
    </LinearLayout>
    </ScrollView>
</RelativeLayout>